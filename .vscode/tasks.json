{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Go Build",
      "type": "shell",
      "command": "go build -o avoidnt .",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Go Run",
      "type": "shell",
      "command": "go run .",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PDF_OUTPUT_PATH": "data/converted"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "go",
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Avoidnt",
          "endsPattern": "listening on"
        }
      }
    }
  ]
}
