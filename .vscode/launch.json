{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go App",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "env": {
        "PDF_OUTPUT_PATH": "data/converted"
      }
    },
    {
      "name": "Go App (no debugger)",
      "type": "node-terminal",
      "request": "launch",
      "command": "go run .",
      "cwd": "${workspaceFolder}",
      "env": {
        "PDF_OUTPUT_PATH": "data/converted"
      }
    }
  ]
}
